@model IEnumerable<OEWebApplicationApp.Models.TblCgyoeModel>

@{
    ViewData["Title"] = "OERequest";

}

<div class="container-fluid boxShadow">
    <div class="row">
        <div class="col-4 "><h3>OERequest</h3></div>
        <a asp-action="Create"><h4>Create New Operating Expense</h4></a>
        <a asp-area="" asp-controller="Home" asp-action="Index"><h4>Back to Home Page</h4></a>
        <div class="col-4 "></div>
        <div class="col-4 ">
            <p>

            </p>
            </div>      
    </div>
</div>
<hr/>
@if (TempData["Info Message"] != null)
{
    <div class="container-fluid d-flex justify-content-center bg-info boxShadow">
        <div class="row">
            <div class="" id="top">
                <h2 class="text-black"><strong>@TempData["Info Message"]</strong></h2>
            </div>
        </div>
    </div>
    <hr/>
}


<div class="container-fluid boxShadow">
    <div class="row justify-content-center">
        <div class="col-1 text-center button"><a asp-controller="Request" asp-action="Index" asp-route-id="All" id="All">View All</a></div>
        <div class="col-1 text-center button"><a asp-controller="Request" asp-action="Index" asp-route-id="Approved" id="Approved">Approved</a></div>
        <div class="col-1 text-center button"><a asp-controller="Request" asp-action="Index" asp-route-id="notApproved">Not Approved</a></div>
        <div class="col-1 text-center button"><a asp-controller="Request" asp-action="Index" asp-route-id="Declined">Declined</a></div>
    </div>
</div>
<div class="container-fluid boxShadow">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.RequestId)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Vendor)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.VendorName)
                </th>
    @*            <th>
                    @Html.DisplayNameFor(model => model.RequestedBy)
                </th>*@
                <th class="text-center w-auto">
                    @Html.DisplayNameFor(model => model.Glaccount)
                </th>
    @*            <th>
                    @Html.DisplayNameFor(model => model.AutoApproveThreshold)
                </th>*@
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Gstamount)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.TotalAmount)
                </th>
    @*            <th>
                    @Html.DisplayNameFor(model => model.Gstincluded)
                </th>*@
    @*            <th>
                    @Html.DisplayNameFor(model => model.Budgeted)
                </th>*@
    @*            <th>
                    @Html.DisplayNameFor(model => model.AutoApproved)
                </th>*@
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Request)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.PurchaseDate)
                </th>
    @*            <th>
                    @Html.DisplayNameFor(model => model.ApprovedBy)
                </th>*@
    @*            <th>
                    @Html.DisplayNameFor(model => model.ApprovedDate)
                </th>*@
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Status)
                </th>
    @*            <th>
                    @Html.DisplayNameFor(model => model.Reason)
                </th>*@
    @*            <th>
                    @Html.DisplayNameFor(model => model.Attachment)
                </th>*@
    @*            <th>
                    @Html.DisplayNameFor(model => model.Timestamp)
                </th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.RequestId)
                </td>
                    <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Vendor)
                </td>
                    <td class="text-center">
                    @Html.DisplayFor(modelItem => item.VendorName)
                </td>
    @*            <td>
                    @Html.DisplayFor(modelItem => item.RequestedBy)
                </td>*@
                    <td class="text-center w-auto">
                    @Html.DisplayFor(modelItem => item.Glaccount)
                </td>
    @*            <td>
                    @Html.DisplayFor(modelItem => item.AutoApproveThreshold)
                </td>*@
                    <td class="text-center">
                    @string.Format("{0:C}", item.Amount)
                </td>
                    <td class="text-center">
                    @string.Format("{0:C}", item.Gstamount)
                </td>
                    <td class="text-center">
                    @string.Format("{0:C}", item.TotalAmount)
                </td>
    @*            <td>
                    @Html.DisplayFor(modelItem => item.Gstincluded)
                </td>*@
    @*            <td>
                    @Html.DisplayFor(modelItem => item.Budgeted)
                </td>*@
    @*            <td>
                    @Html.DisplayFor(modelItem => item.AutoApproved)
                </td>*@
                    <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Request)
                </td>
                    <td class="text-center">
                    @Html.DisplayFor(modelItem => item.PurchaseDate)
                </td>
    @*            <td>
                    @Html.DisplayFor(modelItem => item.ApprovedBy)
                </td>*@
    @*            <td>
                    @Html.DisplayFor(modelItem => item.ApprovedDate)
                </td>*@
                    <td class="text-danger text-center">
                    @Html.DisplayFor(modelItem => item.Status )
                        @ViewBag.ImageCount
                </td>

    @*            <td>
                    @Html.DisplayFor(modelItem => item.Reason)
                </td>*@
    @*            <td>
                    @Html.DisplayFor(modelItem => item.Attachment)
                </td>*@
    @*            <td>
                    @Html.DisplayFor(modelItem => item.Timestamp)
                </td>*@
                <td>

                    @if (item.Status != "Approved")
                    {
                        <a asp-controller="Request" asp-action="Edit" asp-route-id="@item.RequestId" class="text-black">Edit</a>
                        <a asp-controller="Request" asp-action="Details" asp-route-id="@item.RequestId" class="text-black">Details</a>
                        <a asp-controller="Request" asp-action="Delete" asp-route-id="@item.RequestId" class="text-black ">Delete</a>
                        <a asp-controller="Image" asp-action="Index" asp-route-id="@item.RequestId" asp-route-page="request" class="text-black ">Images</a>
                        <a asp-controller="Request" asp-action="Print"
                            asp-route-page="request"
                            asp-route-Requestid="@item.RequestId"
                            asp-route-vendor="@item.Vendor"
                            asp-route-purchaseDate="@item.PurchaseDate"
                            asp-route-glAccount="@item.Glaccount"
                            asp-route-request="@item.Request"
                            asp-route-amountAmt="@item.Amount"
                            asp-route-taxAmt="@item.Gstamount"
                            asp-route-totalAmt="@item.TotalAmount"
                            asp-route-vendorname="@item.VendorName"
                               class="text-black ">OEPrint</a>
                    }
                    else
                    {
                        <a asp-controller="Request" asp-action="Details" asp-route-id="@item.RequestId" class="text-black">Details</a>
                        <a asp-controller="Image" asp-action="Index" asp-route-id="@item.RequestId" asp-route-page="request" class="text-black ">Images</a>
                        <a asp-controller="Request" asp-action="Print"
                            asp-route-page="request"
                            asp-route-Requestid="@item.RequestId" 
                            asp-route-vendor="@item.Vendor"
                            asp-route-purchaseDate="@item.PurchaseDate"
                            asp-route-glAccount="@item.Glaccount"
                            asp-route-request="@item.Request"
                            asp-route-amountAmt="@item.Amount"
                            asp-route-taxAmt="@item.Gstamount"
                            asp-route-totalAmt="@item.TotalAmount"
                            asp-route-vendorName="@item.VendorName"
                        class="text-black ">OEPrint</a>
                    }
                </td>
                    @ViewBag.ImageCount
            </tr>
    }
        </tbody>
    </table>
</div>
<hr />
<a href="#top"><h3 class="text-black">TOP</h3></a>
                   