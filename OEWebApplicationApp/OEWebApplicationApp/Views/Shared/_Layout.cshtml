<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OEWebApplicationApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/OEWebApplicationApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid p-2">
                <img class="d-inline-block align-text-top bg-white m-1 p-2" src="~/Images/MH_Logo_BLACK.png" width="180" height="58"></img>
@*                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">Morrison Homes </a>*@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-black h5 m-3" id="top" asp-area="" asp-controller="Home" asp-action="Index">Home Page</a>
                        </li>
@*                        <li class="nav-item">
                            <a class="nav-link text-light h5" asp-area="" asp-controller="Request" asp-action="Index">Requests</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light h5" asp-area="" asp-controller="Approval" asp-action="Index">Approvals</a>
                        </li>*@
@*                        <li class="nav-item">
                            <a class="nav-link text-light h5" asp-area="" asp-controller="Request" asp-action="apm">Document Mgr</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light h5" asp-area="" asp-controller="Request" asp-action="gls">Customer Letters</a>
                        </li>*@
@*                        <li class="nav-item">
                            <a class="nav-link text-light h5" asp-area="" asp-controller="Home" asp-action="UnderConstruction">Scheduling</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark h5" asp-area="" asp-controller="Home" asp-action="UnderConstruction">Schedule Lookup</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark h5" asp-area="" asp-controller="Home" asp-action="UnderConstruction">Trade List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark h5" asp-area="" asp-controller="Home" asp-action="UnderConstruction">Vendor Reporting</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark h5" asp-area="" asp-controller="Home" asp-action="UnderConstruction">Zero $ PO</a>
                        </li>*@

                    </ul>
                    <a class="nav-link text-light " hidden asp-area="" asp-controller="Settings" asp-action="Index">Settings</a>
@*                    <label><span class="text-dark"> User: @ViewBag.UserName / @ViewBag.DateTime </span> </label>*@

                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-1">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer ">
        <div class="container">
            <div class="row">
                <div class="col-sm-4" id="bottom">Morrison Homes</div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
