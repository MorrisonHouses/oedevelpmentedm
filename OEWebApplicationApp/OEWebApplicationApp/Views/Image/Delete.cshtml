@model OEWebApplicationApp.Models.ImageModel

@{
    ViewData["Title"] = "DeleteImage";
}

<div class="container-fluid boxShadow bg-danger">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4 align-content-center text-center"><h3 class=" text-center text-white">Are you sure you want to DELETE This Image for @Html.DisplayFor(model => model.RequestId)</h3></div>
        <div class="col-4 align-content-end"><a asp-action="Index" asp-route-id="@Model.RequestId" asp-route-page="@ViewData["Page"]"><h4>Back to List</h4></a></div>
    </div>
</div>
@if (TempData["Info Message"] != null)
{
    <hr />
    <strong>@TempData["Info Message"]</strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="close" onclick="close"><span>&times;</span></button>

}
<hr />
<div>
    <div class="container-fluid ">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8 boxShadow">
                <dl class="row">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.RequestId)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.RequestId)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.InsertDate)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.InsertDate)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Location)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Location)
                    </dd>
@*                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Path)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Path)
                    </dd>*@
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.FileName)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.FileName)
                    </dd>
                    <dt class="col-sm-2">
                        View Image
                    </dt>
                    <dd class="col-sm-10">
                        <a href="~/Files/@(Model.FileName)" target="_blank">View File</a>
                    </dd>
                </dl>
            <div class="col-2"></div>
            </div>
        </div>
    </div>
</div>
<div class="container-flex m-2">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4"></div>
        <div class="col-4 align-content-end">
            <form asp-action="Delete" asp-antiforgery="true">
                <input type="hidden" asp-for="FileName" />
                <input type="submit" value="Delete" asp-route-id="@Model.Path" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>